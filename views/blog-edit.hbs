{{#> layout currentPage="Create Blog"}}
       
      <!-- edit blog -->
     <form id="create-blog" action="/blog-update/{{index}}?_method=PACH" method="post" class="create-blog-form" >
    <h2>Edit blog</h2>

    <div class="input-group mb-3">
        <!-- <span class="input-group-text" id="title">Title</span> -->
        <input name="title" id="title" type="text" class="form-control" aria-label="Sizing example input" aria-describedby="title"
        placeholder="Title" value="{{blog.title}}"
        required/>
      </div>

      <div class="input-group  mb-3">
        <!-- <span class="input-group-text">Content</span> -->
        <textarea name="Content"  placeholder="content" class="form-control" aria-label="content" rows="6" 
        required>{{blog.content}}</textarea>
      </div>

      <div class="input-group mb-3">
        <input name="image" type="file" class="form-control" id="image" >
        <label class="input-group-text" for="image">Upload</label>
      </div>

    <div class="button-container">
    <button type="submit">Submit</button>
   </div>
  </form> 
 </article>
</section>
{{/layout}}